---
// 组件逻辑层
interface Item {
  year: string;
  entries: string[];
}

const items: Item[] = [
  { year: "2016", entries: [""] },
  { year: "2018", entries: [""] },
  { year: "2020", entries: [""] },
  // 其他年份数据按此格式补充
];
---
<!-- 组件模板 -->
<div class="timeline-vertical">
  {items.map(item => (
    <section class="year-group">
      <h3 class="year">{item.year}</h3>
      {item.entries.length > 0 && (
        <ul class="entries">
          {item.entries.map(entry => (
            <li class="entry">{entry}</li>
          ))}
        </ul>
      )}
    </section>
  ))}
</div>

<style>
  /* Scoped CSS */
  .timeline-vertical {
    display: grid;
    gap: 2.5rem;
    padding-left: 1rem;
  }

  .year-group {
    position: relative;
    padding-left: 2rem;
  }

  .year-group::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5em;
    width: 12px;
    height: 12px;
    background: #4f46e5;
    border-radius: 50%;
  }

  .year {
    color: #1e293b;
    margin: 0 0 0.8rem;
    font-size: 1.25rem;
  }

  .entries {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
  }

  .entry {
    padding: 0.4rem 0.8rem;
    background: #f1f5f9;
    border-radius: 4px;
    border-left: 3px solid #c7d2fe;
  }
</style>